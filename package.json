{
  "name": "png-civil-cad",
  "version": "1.1.0",
  "description": "Civil Engineering CAD Software for Papua New Guinea",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./core": "./src/core/engine.js",
    "./geometry": "./src/core/geometry.js",
    "./climate": "./src/png/climate.js",
    "./seismic": "./src/png/seismic.js",
    "./flood": "./src/png/flood.js",
    "./materials": "./src/png/materials.js",
    "./structural": "./src/png/structural.js"
  },
  "scripts": {
    "start": "npm run start:web",
    "start:web": "vite",
    "start:desktop": "electron .",
    "build": "vite build",
    "build:desktop": "electron-builder",
    "test": "vitest",
    "lint": "eslint src --ext .js,.jsx"
  },
  "keywords": [
    "cad",
    "civil-engineering",
    "papua-new-guinea",
    "structural-design",
    "autocad",
    "javascript"
  ],
  "author": "PNG Civil Engineering Team",
  "license": "MIT",
  "dependencies": {
    "dxf-parser": "^1.1.2",
    "dxf-writer": "^1.0.0",
    "fabric": "^5.3.0",
    "localforage": "^1.10.0",
    "mathjs": "^12.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.55.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
