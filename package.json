{
  "name": "png-civil-cad",
  "version": "1.0.0",
  "description": "Civil Engineering CAD Software for Papua New Guinea",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run start:web",
    "start:web": "vite",
    "start:desktop": "electron .",
    "build": "npm run build:web && npm run build:desktop",
    "build:web": "tsc && vite build",
    "build:desktop": "electron-builder",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "cad",
    "civil-engineering",
    "papua-new-guinea",
    "structural-design",
    "autocad"
  ],
  "author": "PNG Civil Engineering Team",
  "license": "MIT",
  "dependencies": {
    "dxf-parser": "^1.1.2",
    "dxf-writer": "^1.0.0",
    "fabric": "^5.3.0",
    "localforage": "^1.10.0",
    "mathjs": "^12.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/fabric": "^5.3.0",
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.55.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vitest": "^1.6.1"
  }
}
